<% layout("/layouts/boilerplate")%>
    <div class="row mt-3">
        <div class="alert alert-danger col-6 offset-3" role="alert">
            <h4 class="alert-heading">
                <%= message %>
            </h4>
            <p>
                <!-- Remove err.stack if not needed -->
                <%= typeof err !=="undefined" ? err.stack : "No details available." %>
            </p>
        </div>
    </div>